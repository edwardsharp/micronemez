            <div class="bottom"></div>
        </div>
		<div class="hex z">
		    <div class="top"></div>
            <div class="current_title">
                <% unless @live_now.count == 0 %>

                    LIVE: 
                    <% @live_now.each do |l| %>
                        <%= l.title %> <i>until</i> <%= l.end.to_s(:onlytime) %>
                    <% end %>
                <% else %>
                    UPCOMING: 
                    <% unless @upcoming_this_month %>
                        
                        <%= @upcoming_this_month.title %> <i>until</i> <%= @upcoming_this_month.end.to_s(:onlytime) %>

                    <% else %>
                        NONE YET (BRB!)
                    <% end %>
                <% end %> 
            </div>
		    <div class="middle current mid_heightfix"><h1>CURRENT</h1>
                <p class="current_info">
                    <% unless @live_now.count == 0 %>

                    <% @live_now.each do |l| %>
                        <b>starting:</b> <i><%= l.start.to_s(:onlytime) %></i> <b>description:</b> <%= l.description %> 
                    <% end %>
                <% else %>
                    
                    <% unless @upcoming_this_month %>
                        
                       <b>date:</b> <i><%= @upcoming_this_month.datespan %></i> <b>description:</b> <%= @upcoming_this_month.description %> 

                    <% else %>
                        NONE YET (BRB!)
                    <% end %>
                <% end %> 
                  
                </p>
            </div>
		    <div class="bottom"></div>
		</div>
        
    </div>
