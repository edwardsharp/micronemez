<% content_for :header do %>
  <%= javascript_include_tag 'hexx_assets' %>
  <%= javascript_include_tag 'hexx' %>
  <% unless @live_now.count == 0 %>
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $('.current').hide().trigger('click');
        });
    </script>
  <% end %>
<% end %>
<div id="cluster">
    <div class="hex-row row1">
        
        

        <div class="hex">
            <div class="top"></div>
            <div class="middle info z">
                <p class="title">micronemez</p>

                <div class="info_nav">
                    <% unless user_signed_in? %>
                    <%= link_to " USERZ ", new_user_session_path, :title => "SIGNUP & LOGIN FORMZ" %>
                    <br />
                    <% end %>
                    <%= link_to " FORUMZ ", forums_root_path, :title => "PUBLIC FORUMZ" %>
