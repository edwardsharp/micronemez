<% content_for :header do %>

  <%= javascript_include_tag 'hexx_assets' %>
  <%= javascript_include_tag 'hexx' %>

  <script type="text/javascript">
    jQuery(document).ready(function($) {
      init_archive_infinite_scroller();
    });
  </script>

<% end %>
  <!--div id="container" class="variable-sizes clearfix infinite-scrolling"-->

<div id="archive-container" class="variable-sizes infinite-scroll clearfix">
    <% @videos.each do |video| %>

    <div class="box element width2 " data-symbol="<%= video.catnum %>" data-category="<%= video.tag_list %>" >

        <span><%= link_to t(video.catnum), video %></span>
        <span><%= truncate(video.title, :length => 28) %></span>
        <span><%= truncate(video.location, :length => 28) %></span>
        <span><%= video.tag_list %></span>
        <span><%= truncate(video.description, :length => 28) %></span>
        <% if user_signed_in? %>
            <span><%= link_to t(:edit), edit_video_path(video) %></span>
            <span><%= link_to t(:destroy), video, confirm: t(:confirm), method: :delete %></span>
        <% end %>
        <%= link_to image_tag("/images/#{video.catnum}.jpg", :class=> 'video_thumb', :height => "240"), "/video/show/#{video.catnum}", :title => "#{video.title}",  :id => "#{video.catnum}" %>

      </div>
      
    <% end %>

    

</div> <!-- #container -->

