<% content_for :header do %>
  <%= javascript_include_tag 'videos' %>
<% end %>
<%# form_for(@video) do |f| %>

<%# form_for(@video, :html => { :multipart => true }) do |f| %>
<%= form_for(@video, :html => { :multipart => true }, :validate => true) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 53 %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, :size => 53 %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%# f.text_field :tag %>
    <%# note tag_list above is a virtual column created by acts_as_taggable_on%>
    <%= f.autocomplete_field :tag_list, tags_path, :"data-delimiter" => ', ', "data-pre" => @tags, :class => 'resizer' %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '55x10' %>
  </div>
  <div class="field">
    <%= f.label t :is_public %><br />
 
    <%= f.check_box :is_public %>
  </div>
  <div class="field">
	  <%= f.file_field :video_upload, :style => "padding:5px 0 5px" %>
  </div>
  <div class="actions">
    <%= f.submit :value => t(:video_submit) %>
  </div>
  
  
<% end %>
